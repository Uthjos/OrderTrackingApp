<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="544.0" prefWidth="406.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.metrostate.ics.ordertrackingapp.OrderTrackerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header with title and exit button -->
    <HBox prefHeight="27.0" prefWidth="292.0" spacing="20.0">
        <padding>
            <Insets bottom="20.0" />
        </padding>
   
        <Label text="Manage Orders">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS" />

        <Button onAction="#exitApplication" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-cursor: hand;" text="Exit">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </HBox>
    <HBox fx:id="filterContainer" spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Status:"/>
        <ComboBox fx:id="statusFilter" prefWidth="120.0"/>

        <Label text="Type:"/>
        <ComboBox fx:id="typeFilter" prefWidth="120.0"/>
    </HBox>
    <Label text="Click order to view details" />
<!-- split area: left = scrollable list of orders, right = details pane -->
    <HBox spacing="10.0" VBox.vgrow="ALWAYS">
        <!-- left: scrollable area for orders. populated in OrderTrackerController -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" HBox.hgrow="ALWAYS">
            <VBox fx:id="ordersContainer" spacing="15.0" style="-fx-background-color: white;">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </VBox>
        </ScrollPane>

        <!-- right: details panel that displays expanded order info -->
        <VBox fx:id="detailContainer" prefWidth="320.0" spacing="8.0" style="-fx-border-color: #e0e0e0; -fx-padding: 10; -fx-background-color: #DFE8E8;">
            <Label text="Order Details">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>

        </VBox>
    </HBox>

    <!-- Buttons below the detail container -->
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" style="-fx-background-color: #FF5633; -fx-text-fill: white; -fx-cursor: hand;" visible="false" />
        <Button fx:id="undoButton" text="Un-cancel" style="-fx-background-color: #607d8b; -fx-text-fill: white; -fx-cursor: hand;" visible="false" />
        <Button fx:id="startButton" text="Start" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-cursor: hand;" visible="false" />
        <Button fx:id="completeButton" text="Complete" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-cursor: hand;" visible="false" />
    </HBox>
</VBox>
