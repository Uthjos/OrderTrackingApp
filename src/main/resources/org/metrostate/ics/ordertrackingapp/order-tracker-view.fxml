<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.metrostate.ics.ordertrackingapp.OrderTrackerController"
      spacing="10.0" style="-fx-background-color: white;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header with title and exit button -->
    <HBox spacing="20.0">
        <padding>
            <Insets bottom="20.0" />
        </padding>

        <Label text="Current Orders">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- Spacer to push exit button to the right -->
        <Region HBox.hgrow="ALWAYS" />

        <Button text="Exit" onAction="#exitApplication"
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-cursor: hand;">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </HBox>
    <Label text="Sort Orders: (not implemented yet)">
      <font>
         <Font name="System Bold Italic" size="13.0" />
      </font>
   </Label>
   <HBox prefHeight="25.0" prefWidth="169.0">
      <children>
         <Button mnemonicParsing="false" text="All" />
         <Button mnemonicParsing="false" text="In-Progress" />
         <Button mnemonicParsing="false" text="Completed" />
         <Button mnemonicParsing="false" text="Cancelled" textAlignment="JUSTIFY" />
      </children>
   </HBox>
   <HBox prefHeight="16.0" prefWidth="292.0">
      <children>
         <Button mnemonicParsing="false" text="FoodHub" />
         <Button mnemonicParsing="false" text="GrubStop" />
      </children>
   </HBox>
<!-- scrollable area for orders. populated in OrderTrackerController -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="ordersContainer" spacing="15.0" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </ScrollPane>
</VBox>
